<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/common_activity_layout" />

        <FrameLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.zhouwei.mzbanner.MZBannerView
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:canLoop="false"
                    app:indicatorAlign="center"
                    app:open_mz_mode="false" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:id="@+id/topLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/invitationCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="邀请码：xxxxxx"
                            android:textColor="@color/text_deep_color"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/btnCopy"
                            style="@style/BtnTheme"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="16dp"
                            android:text="复  制" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/gotoOrder"
                        style="@style/BtnTheme"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:text="月卡充值记录" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/workMLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/gotoQrInfoWork"
                                style="@style/BtnTheme"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="打工月卡充值" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/studyMLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/gotoQrInfoStudy"
                                style="@style/BtnTheme"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="学习月卡充值" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/gotoPer"
                                style="@style/BtnTheme"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="权限设置" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/gotoStudy"
                                style="@style/BtnTheme"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="文字教程" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/gotoJoin"
                                style="@style/BtnTheme"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="代理推广" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="32dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/workLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btnStartWork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/run_start_bg"
                        android:gravity="center"
                        android:text="开始打工"
                        android:textColor="@color/white_color"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/btnStopWork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/run_stop_bg"
                        android:gravity="center"
                        android:text="结束打工"
                        android:textColor="@color/white_color"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/workDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="有效期：0000-00-00"
                        android:textColor="@color/text_deep_color"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/studyLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btnStartStudy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/run_start_bg"
                        android:gravity="center"
                        android:text="开始学习"
                        android:textColor="@color/white_color"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/btnStopStudy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/run_stop_bg"
                        android:gravity="center"
                        android:text="结束学习"
                        android:textColor="@color/white_color"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/studyDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="有效期：0000-00-00"
                        android:textColor="@color/text_deep_color"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>


    </FrameLayout>
</LinearLayout>