<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/bg_color</item>
    </style>

    <style name="AppTheme.Splash" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="LunchTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/bg_color</item>
    </style>

    <style name="LunchFirstTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:background">@drawable/lauch_bg</item>
        <item name="android:windowBackground">@drawable/lauch_bg</item>
    </style>

    <style name="BtnTheme">
        <item name="android:height">40dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
