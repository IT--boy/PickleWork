<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:centerColor="@color/btn_enabled_color"
                android:endColor="@color/btn_enabled_color"
                android:startColor="@color/btn_enabled_color"
                android:angle="180"/>
            <corners android:radius="@dimen/radius_size" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:centerColor="@color/btn_pressed_color"
                android:endColor="@color/btn_pressed_color"
                android:startColor="@color/btn_pressed_color"
                android:angle="180"/>
            <corners android:radius="@dimen/radius_size" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:centerColor="@color/btn_normal_middle_color"
                android:endColor="@color/btn_normal_end_color"
                android:startColor="@color/btn_normal_start_color"
                android:angle="180"/>
            <corners android:radius="@dimen/radius_size" />
        </shape>
    </item>
</selector>